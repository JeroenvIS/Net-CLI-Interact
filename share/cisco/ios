state user_prompt
    match /[Uu]sername: ?$/

state pass_prompt
    match /[Pp]assword: ?$/

state user_exec
    match /> ?$/

state priv_exec
    match /# ?$/

state configure
    match /\(config[^)]*\)# ?$/


macro to_user_exec
    send %s
    match /[Pp]assword: ?$/
    send %s
    match /> ?$/

macro to_priv_exec
    send enable
    match /[Pp]assword: ?$/
    send %s
    match /# ?$/

macro write_mem
    send copy running-config startup-config
    match /Destination filename \[startup-config\]\?$/
    send startup-config

macro show_run
    send show running-config
    follow / --More-- / with ' '

macro show_int_br
    send show ip int br
    send show ip int br
