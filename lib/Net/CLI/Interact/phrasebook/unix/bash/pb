prompt user
    match /[Uu]sername: $/

prompt pass
    match /password(?: for \w+)?: $/

prompt prompt
    match /\w+@.+\$ $/

prompt privileged
    match /^root@.+# $/

macro begin_privileged
    send sudo su -
    match pass or privileged

macro end_privileged
    send exit
    match prompt

macro disconnect
    send logout
